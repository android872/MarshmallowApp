<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person #1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/p1"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person #2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000"
        android:layout_below="@+id/p1"
        android:layout_centerHorizontal="true"
        android:id="@+id/p2"
        />

    <TextView
        android:id="@+id/tm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is middle"
        android:layout_below="@+id/p2"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is left"
        android:layout_below="@+id/p2"
        android:layout_toLeftOf="@id/tm1"
        android:paddingRight="15dp"
        />

    <TextView
        android:id="@+id/tr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is right"
        android:layout_below="@+id/p2"
        android:layout_toRightOf="@id/tm1"
        android:paddingLeft="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person #3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000"
        android:layout_below="@+id/tr1"
        android:layout_alignParentRight="true"
        android:id="@+id/p3"
        />
</RelativeLayout>
